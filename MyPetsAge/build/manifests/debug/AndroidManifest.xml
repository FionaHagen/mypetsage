<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="1" android:versionName="1.0" package="nl.peternijssen.mypetsage">

    <uses-sdk android:minSdkVersion="10" android:targetSdkVersion="16"/>

    <application android:allowBackup="true" android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:theme="@style/AppTheme">
        <activity android:label="@string/app_name" android:name="nl.peternijssen.mypetsage.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:label="@string/action_add_pet" android:name="nl.peternijssen.mypetsage.PetActivity">
        </activity>
        <activity android:label="@string/action_settings" android:name="nl.peternijssen.mypetsage.SettingsActivity">
        </activity>

        <service android:name="nl.peternijssen.mypetsage.widget.PetWidgetService" android:permission="android.permission.BIND_REMOTEVIEWS"/>

        <receiver android:name="nl.peternijssen.mypetsage.widget.PetWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>
            <meta-data android:name="android.appwidget.provider" android:resource="@xml/widget_provider"/>
        </receiver>
    </application>
</manifest>
